<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bk_sidebar"
    tools:context="com.example.bondw_000.ui_v15.NavigationDrawerFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/imageView2"
            android:background="@drawable/banner"
            android:layout_weight="0.7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:padding="20dp"
            android:id="@+id/sidebarMain">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main"
                android:id="@+id/textView5"
                android:textColor="#DDD"
                android:textSize="22dp"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:paddingRight="10dp"
                android:background="@drawable/mini_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sidebarMain"
            android:padding="20dp"
            android:id="@+id/sidebarAvailable">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:id="@+id/textView6"
                android:textColor="#DDD"
                android:textSize="22dp"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:paddingRight="10dp"
                android:background="@drawable/mini_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sidebarAvailable"
            android:padding="20dp"
            android:id="@+id/sidebarHistory">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:id="@+id/textView7"
                android:textColor="#DDD"
                android:textSize="22dp"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:paddingRight="10dp"
                android:background="@drawable/mini_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sidebarHistory"
            android:padding="20dp"
            android:id="@+id/sidebarFavorite">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite"
                android:id="@+id/textView8"
                android:textColor="#DDD"
                android:textSize="22dp"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:paddingRight="10dp"
                android:background="@drawable/mini_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sidebarFavorite"
            android:padding="20dp"
            android:id="@+id/sidebarSettings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/textView4"
                android:textColor="#DDD"
                android:textSize="22dp"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:paddingRight="10dp"
                android:background="@drawable/mini_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>

