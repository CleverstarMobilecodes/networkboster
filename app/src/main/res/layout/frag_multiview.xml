<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/banner_bk"

        android:elevation="14dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/drawer_imageView"
            android:src="@mipmap/ic_menu_drawer"
            android:layout_gravity="center"
            android:padding="10dp"
            android:scaleType="matrix" />

        <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        app:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            android:background="@drawable/banner_bk"
        android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabMode="fixed"
        app:tabGravity="fill"
        style="@style/Custom.TabLayoutStyle" />
    </android.support.design.widget.AppBarLayout></LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tabone_imageView"
            android:layout_weight="1"
            android:src="@drawable/aero_down"
            android:antialias="true"
            android:scaleType="fitStart" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tabtwo_imageView"
            android:layout_weight="1"
            android:antialias="true"
            android:src="@drawable/aero_down"
            android:scaleType="fitStart" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tabthree_imageView"
            android:layout_weight="1"
            android:antialias="true"
            android:src="@drawable/aero_down"
            android:scaleType="fitStart" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout></FrameLayout>

</LinearLayout>




</android.support.design.widget.CoordinatorLayout>