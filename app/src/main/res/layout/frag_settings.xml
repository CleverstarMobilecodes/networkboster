<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accuracy:"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/textView12"
        android:background="@drawable/settings_content_item"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="7dp"
            android:id="@+id/layoutAccuracyBig"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imgAccuracyBigFrame"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_frame" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:id="@+id/imgAccuracyBigContents"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/accuracy_big_hot" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="7dp"
            android:id="@+id/layoutAccuracySmall"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imgAccuracySmallFrame"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_frame" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:id="@+id/imgAccuracySmallContents"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/accuracy_small_hot" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Units:"
        android:id="@+id/textView13"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/textView13"
        android:background="@drawable/settings_content_item"
        android:id="@+id/linearLayout2" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="7dp"
            android:id="@+id/layoutSpeedMbits"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imgSpeedMbitsFrame"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_frame" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mbit/s"
                android:id="@+id/txtSpeedMbits"
                android:textColor="@color/settings_cold_color"
                android:textSize="20dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="7dp"
            android:id="@+id/layoutSpeedKbits"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imgSpeedKbitsFrame"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_frame" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kBit/s"
                android:id="@+id/txtSpeedKbits"
                android:textColor="@color/settings_hot_color"
                android:textSize="20dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
        android:id="@+id/textView14"
        android:textColor="#888"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inner IP:"
            android:id="@+id/textView15"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingRight="10dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/txtInnerIP"
            android:layout_weight="0.5"
            android:textColor="#187096"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@+id/textView15"
            android:layout_alignTop="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out IP:"
            android:id="@+id/textView17"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:layout_alignRight="@+id/textView15"
            android:layout_below="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/txtOutIP"
            android:layout_weight="0.5"
            android:textColor="#187096"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:layout_alignLeft="@+id/txtInnerIP"
            android:layout_alignTop="@+id/textView17" />
    </RelativeLayout>

</RelativeLayout>